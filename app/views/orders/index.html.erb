<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Status</th>
      <th>Trade number</th>
      <th>Shop code</th>
      <th>Customer code</th>
      <th>Order type</th>
      <th>Sale type</th>
      <th>Channel</th>
      <th>Order date</th>
      <th>Pay date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= order.status %></td>
        <td><%= order.trade_number %></td>
        <td><%= order.shop_code %></td>
        <td><%= order.customer_code %></td>
        <td><%= order.order_type %></td>
        <td><%= order.sale_type %></td>
        <td><%= order.channel %></td>
        <td><%= order.order_date %></td>
        <td><%= order.pay_date %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

